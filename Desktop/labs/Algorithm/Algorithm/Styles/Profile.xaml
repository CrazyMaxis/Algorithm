<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="BackgroundProfile" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
        <GradientStop Offset="0" Color="#D0393C46"/>
        <GradientStop Offset="1" Color="#FF393C46"/>
    </RadialGradientBrush>

    <Style x:Key="GradientProfile" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundProfile}"/>
    </Style>

</ResourceDictionary>